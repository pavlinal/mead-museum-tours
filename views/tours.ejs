<!--views/tours.ejs-->
<!DOCTYPE html>
<html lang="en">

<head>
<% include partials/head %>
<script>
      $(document).ready(function(){
        var id;
        $("#passID").click(function(){
          id=$(this).attr("data-id");
          $.post("http://localhost:3000/tourdetail",{id: id}, function(data){
            if(data==='done')
              {
                alert("login success");
              }
          });
        });
      });
    </script>
</head>

<body onhashChange="changePageHash()">

<% include partials/header %>

<div id="content" class="basic">
	<div class="tours">
		<div class="box">
			<h1><%= title %></h1>
			<div class="insetbox">
				<p>
					Take a tour of select objects from across the collections in Visible Storage. 
				</p>
				<p>
					Objects on these tours are grouped thematically based on their similar function or decorative design elements.
				</p>
				<div class="container">
					<div class="row">
						<!-- this should be repeated for all the tours in the system-->
						<% for(var i=0; i < tours.length; i++) { %>
						<div class="col-lg-3 col-md-4 col-xs-6 thumb">
							<!-- the id in the href should be the id of the actual tour-->
							<% var tourid = tours[i].id %>
							<a id="passID" class="thumbnail" href='/tourdetail' data-id='<%= tours[i].id %>'>
								<div class="thumbnaillist">
									<!-- the src should be the path to the tour's key photo-->
									<img class="img-responsive" src='img/<%= tours[i].img %>' alt="">
								</div>
								<!-- the title of the tour-->
								<div id="tourtitle">
									<%= tours[i].name %>
								</div>
							</a>
						</div>
						<% } %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<% include partials/footer %>
