<!--views/search-->
<% include partials/head %>

<% include partials/header %>

<div id="content" class="basic">
	<div class="search">
		<div class="box">
			<h1><%= title %></h1>
			<!-- You can get the criteria being searched by using: var obj = document.getElementById("searchBy"); -->
			<form class="form-inline" role="form" style="margin-bottom: 20px;">
				<div class="form-group">
					<select class="form-control" id="searchBy">
						<option value="objectName">Object name</option>
						<option value="artistName">Artist name</option>
						<!--<option name="tourName">Tour name</option>-->
						<!--<option name="culture">Culture</option>-->
						<option value="objectID">Object ID</option>
					</select>
					<% var field = document.getElementById("searchBy"); %>
				</div>
				<div class="form-group">
					<input name="query" id="test" type="text" class="form-control">
				</div>
				<!-- Will need to add a function call into the onclick handler -->
				<button type="submit" onclick="console.log('Submitted form');" class="btn btn-default">Search</button>
			</form>
			<div class="insetbox">
				<div class="list-group">

					<!-- example of how object should be displayed in the search results, should be repeated for all objects returned -->
					<!-- in the href test in ?id=test should be replaced by the object's real id -->
					<% for(var i=0; i < result.length; i++) { %>
					<a  class="list-group-item" href='#object?<%= result[i].id %>=test'>
						<div class="objecttour">
							<!-- src should be the path to the object's photo -->
							<img class="img-responsive" src="img/yellowmead.jpg" alt="">
						</div>
						<!-- the title of the object-->
						<div id="tourtitle">
							<%= result[i].title %>
						</div>
					</a>
					<% } %>
				</div>
			</div>
		</div>
	</div>
</div>

<% include partials/footer %>
